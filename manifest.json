{
  "manifest_version": 2,
  "name": "Summarize Web",
  "version": "1.0",
  "description": "Web Extension that summarizes content on current page.",
  "background": {
    "scripts": ["background.js"]
  },
  "browser_action": {
    "default_icon": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  },
  "permissions": ["activeTab"]
}
