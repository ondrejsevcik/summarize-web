{
  "manifest_version": 3,
  "name": "Summarize Web",
  "version": "1.0",
  "description": "Web Extension that summarizes content on current page.",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": ["contextMenus", "storage", "tabs", "menus"],
  "background": {
    "scripts": ["background.js"]
  },
  "content_scripts": [
    {
      "matches": ["https://chatgpt.com/*", "https://www.perplexity.ai/*"],
      "js": ["contentScript_chatgpt.js"]
    },
    {
      "matches": ["<all_urls>"],
      "exclude_matches": ["https://chatgpt.com/*", "https://www.perplexity.ai/*"],
      "js": ["contentScript_getContent.js"]
    }
  ]
}
