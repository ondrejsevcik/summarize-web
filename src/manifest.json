{
  "manifest_version": 3,
  "name": "Summarize Web",
  "version": "1.0",
  "description": "Web Extension that summarizes content on current page.",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": ["contextMenus", "storage", "tabs"],
  "background": {
    "__NOTE__": "using both since Firefox and Chrome support different formats",
    "service_worker": "background.ts",
    "scripts": ["background.ts"]
  },
  "content_scripts": [
    {
      "matches": ["https://www.perplexity.ai/*"],
      "js": ["contentScript_perplexity.ts"]
    },
    {
      "matches": ["https://chatgpt.com/*"],
      "js": ["contentScript_chatgpt.ts"]
    },
    {
      "matches": ["<all_urls>"],
      "js": ["contentScript_pageContent.ts"]
    },
    {
      "matches": ["https://youtube.com/*", "https://www.youtube.com/*"],
      "js": ["contentScript_youtube.ts"]
    }
  ]
}
